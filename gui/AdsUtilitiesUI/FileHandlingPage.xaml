<Page x:Class="AdsUtilitiesUI.FileHandlingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdsUtilitiesUI"
      d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FileHandlingPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0" Header="Local" Margin="2">
            <local:FileExplorerControl/>
        </GroupBox>
        <GroupBox Grid.Column="1" Header="Target" Margin="2">
            <local:FileExplorerControl/>
        </GroupBox>
    </Grid>
</Page>
