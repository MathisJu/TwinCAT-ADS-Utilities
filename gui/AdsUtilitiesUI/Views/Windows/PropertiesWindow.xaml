<Window x:Class="AdsUtilitiesUI.PropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdsUtilitiesUI"
        mc:Ignorable="d"
        Title="PropertiesWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Name}" Margin="0,0,0,10"/>
            <TextBlock Text="Size:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Size}" Margin="0,0,0,10"/>
            <TextBlock Text="Date Created:" FontWeight="Bold"/>
            <TextBlock Text="{Binding DateCreated}" Margin="0,0,0,10"/>
            <TextBlock Text="Date Modified:" FontWeight="Bold"/>
            <TextBlock Text="{Binding DateModified}" Margin="0,0,0,10"/>
            <Button Content="OK" Width="75" HorizontalAlignment="Right" Click="OKButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
